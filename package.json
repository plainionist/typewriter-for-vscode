{
  "name": "typewriter",
  "displayName": "Typewriter 2.0",
  "description": "Automated typing. Based on 'typewriter' VsCode extension by dansilver",
  "version": "2.0.0",
  "publisher": "plainionist",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:typewriter.playback",
    "onCommand:typewriter.setTypewriter"
  ],
  "main": "./out/src/extension",
  "properties": {
    "typewriter.TypingSpeed": {
      "type": "number",
      "default": 60,
      "description": "Typing speed"
    }
  },
  "contributes": {
    "commands": [
      {
        "command": "typewriter.playback",
        "title": "Typewriter: Play"
      },
      {
        "command": "typewriter.setTypewriter",
        "title": "Typewriter: Set from selection"
      },
      {
        "command": "typewriter.pause",
        "title": "Typewriter: Pause/Resume playback"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "test": "node ./node_modules/vscode/bin/test",
    "package": "vsce package",
    "vscode:install": "code --install-extension typewriter-2.0.0.vsix",
    "patch": "npm run package && npm run vscode:install"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "mocha": "^10.3.0",
    "@types/vscode": "^1.73.0",
    "@types/node": "^20.11.0",
    "@types/mocha": "^10.0.0"
  },
  "icon": "assets/1481463247_package_wordprocessing_iconfinder.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/plainionist/typewriter-for-vscode"
  },
  "bugs": {
    "url": "https://github.com/plainionist/typewriter-for-vscode/issues"
  }
}
